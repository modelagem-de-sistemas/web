// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:prod.db"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  contact   Contact  @relation(fields: [contactId], references: [id])
  contactId Int      @unique
  Job       Job?     @relation(fields: [jobId], references: [id])
  jobId     Int?
}

model Homepage {
  id        Int      @id @default(autoincrement())
  title     String
  meta      String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id          Int      @id @default(autoincrement())
  email       String
  phone       String?
  description String?
  linkedin    String?
  github      String?
  instagram   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  User        User[]
}

model Job {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  company     String
  office      String
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  User        User[]
  Project     Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  url         String
  html        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Job         Job?     @relation(fields: [jobId], references: [id])
  jobId       Int?
}

model Education {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  startDate   DateTime
  endDate     DateTime
  school      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Skill {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  credential   String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  SkillModules SkillModule[]
}

model SkillModule {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Skill       Skill    @relation(fields: [skillId], references: [id])
  skillId     Int
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
